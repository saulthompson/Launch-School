<section id="todos">
  <header>
    <h2>Editing <%= @list[:name] %></h2>
    <form action="/lists/<%= params[:id] %>/destroy" method="post">
      <button type="submit" class="delete">Delete List</button>
    </form>
  </header>
</section>


<form action="/lists" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for the list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= 
      params[:name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="commit" value="Save">
    <a href="/">Cancel</a>
  </fieldset>
</form>

<% content_for :header_links do %>
  <p>Editing <%= @list[:name] %></p>
  <a href="">Delete List</a>
<% end %>